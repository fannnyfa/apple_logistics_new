<%#
  Enhanced Shadcn UI Badge Component
  Usage: render 'shared/components/shadcn_badge', variant: 'default', text: 'Badge text'
%>
<% 
  variant ||= 'default'
  classes ||= ''
  
  base_classes = "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
  
  variant_classes = case variant
  when 'default'
    'border-transparent bg-blue-600 text-white hover:bg-blue-700'
  when 'secondary'
    'border-transparent bg-gray-100 text-gray-900 hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-100 dark:hover:bg-gray-700'
  when 'destructive'
    'border-transparent bg-red-600 text-white hover:bg-red-700'
  when 'success'
    'border-transparent bg-green-500 text-white hover:bg-green-600'
  when 'warning'
    'border-transparent bg-yellow-500 text-white hover:bg-yellow-600'
  when 'outline'
    'text-gray-900 border-gray-300 dark:text-gray-100 dark:border-gray-600'
  else
    'border-transparent bg-blue-600 text-white hover:bg-blue-700'
  end
  
  all_classes = "#{base_classes} #{variant_classes} #{classes}"
%>

<div class="<%= all_classes %>">
  <%= yield %>
</div>