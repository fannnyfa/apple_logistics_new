<%#
  Enhanced Shadcn UI Card Component
  Usage: render 'shared/components/shadcn_card', title: 'Card Title', description: 'Card description'
%>
<% 
  classes ||= ''
  
  base_classes = "rounded-xl border border-gray-200 bg-white text-gray-900 shadow-sm dark:border-gray-800 dark:bg-gray-900 dark:text-gray-100"
  all_classes = "#{base_classes} #{classes}"
%>

<div class="<%= all_classes %>">
  <% if defined?(title) && title %>
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-2xl font-semibold leading-none tracking-tight"><%= title %></h3>
      <% if defined?(description) && description %>
        <p class="text-sm text-gray-600 dark:text-gray-400"><%= description %></p>
      <% end %>
    </div>
  <% end %>
  
  <div class="<%= defined?(title) && title ? 'p-6 pt-0' : 'p-6' %>">
    <%= yield %>
  </div>
</div>