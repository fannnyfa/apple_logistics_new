<%#
  Enhanced Shadcn UI Alert Component
  Usage: render 'shared/components/shadcn_alert', variant: 'default', title: 'Alert Title'
%>
<% 
  variant ||= 'default'
  title ||= nil
  classes ||= ''
  
  base_classes = "relative w-full rounded-lg border p-4"
  
  variant_classes = case variant
  when 'default'
    'bg-background text-foreground border-border'
  when 'destructive'
    'border-destructive/50 text-destructive dark:border-destructive [&>svg]:text-destructive'
  when 'success'
    'border-green-500/50 text-green-700 bg-green-50 dark:bg-green-950 [&>svg]:text-green-600'
  when 'warning'
    'border-yellow-500/50 text-yellow-700 bg-yellow-50 dark:bg-yellow-950 [&>svg]:text-yellow-600'
  else
    'bg-background text-foreground border-border'
  end
  
  all_classes = "#{base_classes} #{variant_classes} #{classes}"
%>

<div class="<%= all_classes %>" role="alert">
  <div class="flex">
    <div class="flex-shrink-0">
      <% case variant %>
      <% when 'success' %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      <% when 'destructive' %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      <% when 'warning' %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <div class="ml-3">
      <% if title %>
        <h5 class="text-sm font-medium"><%= title %></h5>
      <% end %>
      <div class="text-sm <%= title ? 'mt-1' : '' %>">
        <%= yield %>
      </div>
    </div>
  </div>
</div>