<%#
  Badge component inspired by Shadcn UI
  Usage: render 'shared/components/badge', text: 'New', variant: 'success'
%>
<% 
  variant ||= 'default'
  classes ||= ''
  
  base_classes = "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
  
  variant_classes = case variant
  when 'default'
    'border-transparent bg-slate-900 text-slate-50 hover:bg-slate-800'
  when 'secondary'
    'border-transparent bg-blue-600 text-white px-3 py-1 text-sm font-bold'
  when 'outline'
    'text-slate-950 border-slate-300'
  when 'destructive'
    'border-transparent bg-red-500 text-slate-50 hover:bg-red-600'
  when 'success'
    'border-transparent bg-green-600 text-white px-3 py-1 text-sm font-bold'
  when 'warning'
    'border-transparent bg-yellow-500 text-slate-50 hover:bg-yellow-600'
  when 'info'
    'border-transparent text-white px-3 py-1 text-sm font-bold'
  else
    'border-transparent bg-slate-900 text-slate-50 hover:bg-slate-800'
  end
  
  all_classes = "#{base_classes} #{variant_classes} #{classes}"
%>

<div class="<%= all_classes %>" <% if defined?(style) && style %> style="<%= style %>"<% end %>>
  <%= yield %>
</div>