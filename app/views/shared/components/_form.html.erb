<%#
  Form wrapper component inspired by Shadcn UI
  Usage: render 'shared/components/form', title: 'Form Title' do ... end
%>
<% 
  title ||= nil
  subtitle ||= nil
  classes ||= ''
  
  base_classes = "space-y-6"
  all_classes = "#{base_classes} #{classes}"
%>

<div class="<%= all_classes %>">
  <% if title || subtitle %>
    <div class="space-y-2">
      <% if title %>
        <h2 class="text-2xl font-bold tracking-tight text-slate-900"><%= title %></h2>
      <% end %>
      <% if subtitle %>
        <p class="text-sm text-slate-600"><%= subtitle %></p>
      <% end %>
    </div>
  <% end %>
  
  <%= yield %>
</div>