<%#
  Card component inspired by Shadcn UI
  Usage: render 'shared/components/card', classes: 'custom-class' do ... end
%>
<% 
  classes ||= ''
  padding ||= 'p-6'
  
  base_classes = "rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 shadow-sm"
  all_classes = "#{base_classes} #{padding} #{classes}"
%>

<div class="<%= all_classes %>">
  <%= yield %>
</div>