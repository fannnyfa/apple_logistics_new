<div class="border-b border-gray-200 p-4" id="collection_mobile_<%= collection.id %>">
  <div class="flex justify-between items-start mb-2">
    <h3 class="text-xl font-semibold text-gray-900"><%= collection.farm_name %></h3>
    <% if collection.in_progress? %>
      <span class="inline-flex px-2 py-1 text-xs font-bold rounded-lg bg-blue-100 text-blue-800 border-2 border-blue-500">접수완료</span>
    <% elsif collection.completed? %>
      <span class="inline-flex px-2 py-1 text-xs font-bold rounded-lg bg-green-100 text-green-800 border-2 border-green-500">수거완료</span>
    <% else %>
      <span class="inline-flex px-2 py-1 text-xs font-bold rounded-lg bg-gray-400 text-white">상태미정</span>
    <% end %>
  </div>
  
  <div class="text-sm text-gray-500 space-y-1 mb-3">
    <div><span class="font-medium">수량:</span> <span class="text-lg font-semibold text-gray-800"><%= collection.quantity %></span></div>
    <div><span class="font-medium">공판장:</span> <%= collection.market.name %> (<%= collection.market.district %>)</div>
    <div><span class="font-medium">접수일자:</span> <%= collection.scheduled_at.strftime("%m/%d") %></div>
  </div>
  
  <div class="flex flex-wrap gap-3">
    <% if collection.in_progress? %>
      <%= link_to "수거완료", update_status_collection_path(collection, status: 'completed'), 
          data: { "turbo-method": :patch },
          class: "bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium" %>
    <% elsif collection.completed? %>
      <%= link_to "되돌리기", revert_collection_path(collection), 
          data: { "turbo-method": :patch, "turbo-confirm": "접수 상태로 되돌리시겠습니까?" },
          class: "bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium" %>
    <% end %>
    <%= link_to "수정", edit_collection_path(collection), class: "bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium" %>
    <%= link_to "삭제", collection_path(collection), 
        data: { "turbo-method": :delete, "turbo-confirm": "정말 삭제하시겠습니까?" }, 
        class: "bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium" %>
  </div>
</div>