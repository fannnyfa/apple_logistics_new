<tr id="collection_<%= collection.id %>">
  <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= collection.farm_name %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= collection.quantity %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= collection.market.name %>
    <br><span class="text-xs text-gray-400"><%= collection.market.district %></span>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= collection.scheduled_at.strftime("%m/%d") %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap">
    <% if collection.in_progress? %>
      <span class="inline-flex px-3 py-2 text-sm font-bold rounded-lg bg-blue-100 text-blue-800 border-2 border-blue-500">접수완료</span>
    <% elsif collection.completed? %>
      <span class="inline-flex px-3 py-2 text-sm font-bold rounded-lg bg-green-100 text-green-800 border-2 border-green-500">수거완료</span>
    <% else %>
      <span class="inline-flex px-3 py-2 text-sm font-bold rounded-lg bg-gray-400 text-white">상태미정</span>
    <% end %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex space-x-2">
      <% if collection.in_progress? %>
        <%= link_to "수거완료", update_status_collection_path(collection, status: 'completed'), 
            data: { "turbo-method": :patch },
            class: "text-green-600 hover:text-green-900" %>
      <% elsif collection.completed? %>
        <%= link_to "되돌리기", revert_collection_path(collection), 
            data: { "turbo-method": :patch, "turbo-confirm": "접수 상태로 되돌리시겠습니까?" },
            class: "text-yellow-600 hover:text-yellow-900" %>
      <% end %>
      <%= link_to "수정", edit_collection_path(collection), class: "text-indigo-600 hover:text-indigo-900" %>
      <%= link_to "삭제", collection_path(collection), 
          data: { "turbo-method": :delete, "turbo-confirm": "정말 삭제하시겠습니까?" }, 
          class: "text-red-600 hover:text-red-900" %>
    </div>
  </td>
</tr>